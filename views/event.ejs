                            <%= event.dateTime %>
                        </li>
                        <!-- Duration -->
                        <li>
                            <b>Duration: </b>
                            <%= event.duration %>
                        </li>
                        <!-- Venue -->
                        <li>
                            <b>Venue: </b>
                            <%= event.venue %>
                        </li>
                        <!-- Organizers -->
                        <li>
                            <b>Organizers: </b>
                            <ul>
                                <% event.organizers.forEach((organizer) => { %>
                                <li><%= organizer %></li>
                                <% }) %>
                            </ul>
